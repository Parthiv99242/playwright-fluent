{
  "name": "playwright-controller",
  "version": "0.2.0",
  "description": "Fluent API around playwright",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "!*.test.js",
    "!*.test.d.ts"
  ],
  "scripts": {
    "build-device-names": "ts-node ./src/devices/device-names-builder.ts",
    "build": "rimraf lib && npm run format && npm run lint && tsc",
    "check-format": "prettier --list-different \"src/**/*.ts\" ",
    "format": "prettier --write \"src/**/*.ts\" ",
    "jest-init": "jest --init",
    "lint": "eslint . --ext .js,.ts --format visualstudio --no-color --max-warnings 10 --report-unused-disable-directives",
    "lint-fix": "npm run lint -- --fix",
    "package": "rimraf package && rm -f playwright-controller*.tgz && npm pack",
    "test": "jest --config=jest.config.js --runInBand",
    "tsc-init": "tsc --init",
    "tsc": " tsc --listEmittedFiles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdorgeval/playwright-controller.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "author": "Henri d'Orgeval",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hdorgeval/playwright-controller/issues"
  },
  "keywords": [
    "playwright",
    "fluent-api",
    "e2e",
    "test-automation",
    "test-runner"
  ],
  "homepage": "https://github.com/hdorgeval/playwright-controller#readme",
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/jest": "25.1.2",
    "@types/node": "13.7.1",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.1",
    "simple-fake-server": "3.1.0",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "playwright": "0.10.0"
  }
}
